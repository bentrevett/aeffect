import argparse

import torch
import transformers

MODEL_NAME = "bert-base-cased"
MASK_TOKEN = "[MASK]"

parser = argparse.ArgumentParser()
parser.add_argument("query", type=str)
args = parser.parse_args()

assert "[MASK]" in args.query, "Query needs to have a [MASK] token!"
assert args.query.count(MASK_TOKEN) == 1, "Queries should only have a single [MASK] token!"

transformers.logging.set_verbosity(transformers.logging.ERROR)

pipe = transformers.pipeline("fill-mask", model=MODEL_NAME)

with torch.inference_mode():
    result = pipe(args.query, targets=["effect", "affect"])

for res in result:
    seq = res["sequence"]
    score = res["score"]
    print(f"({score*100:05.2f}%): {seq}")
